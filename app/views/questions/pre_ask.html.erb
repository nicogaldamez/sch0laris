<div id="how_to_ask">
  
  <div class="section moment_has_come">
    <h3> <%= t("posts.how_to_ask.moment_has_come.title") %> </h3>
    <p>
      <%= t("posts.how_to_ask.moment_has_come.body") %>
    </p>
    
    <h4 class="main_nav_title"> <%= t("posts.how_to_ask.entries.title") %> </h4>
    <p>
      <%= t("posts.how_to_ask.entries.body") %>
    </p>
    
    <h4 class="main_nav_title"> <%= t("posts.how_to_ask.questions.title") %> </h4>
    <p>
      <%= t("posts.how_to_ask.questions.body") %>
    </p>
    <br>
    <p> <%= t("posts.how_to_ask.tips") %> </p>
  
    <h4> <%= t("posts.how_to_ask.search.title") %> </h4>
    <p>
      <%= t("posts.how_to_ask.search.body") %>
    </p>
		<%= form_tag questions_path, id: 'search_form', method: 'get', autocomplete: 'off' do %>
      <%= text_field_tag :search, "", class:'search_input', placeholder: t(:search) %>
    	<%= button_tag( :class => "btn btn-primary btn-large", type: 'submit', id: 'sign_in_btn') do %>
    	  <i class="icon-search icon-white"></i>
    	<% end %>
    <% end %>
  </div>
  
  <div class="section">
    <h4> <%= t("posts.how_to_ask.good_title.title") %> </h4>
    <p>
      <%= t("posts.how_to_ask.good_title.body") %>
    </p>
  </div>
  
  
  <div class="section">
    <h4> <%= t("posts.how_to_ask.be_specific.title") %> </h4>
    <p>
      <%= t("posts.how_to_ask.be_specific.body") %>
    </p>
  </div>

  <div class="section">
    <h3> <%= t("posts.how_to_ask.use_tags.title") %> </h3>
    <p>
      <%= t("posts.how_to_ask.use_tags.body") %>
    </p>
    <p> 
      <br>
      <%= t("posts.how_to_ask.use_tags.example_title") %> <br>
      <%= t("posts.how_to_ask.use_tags.example1") %> <br>
      <%= t("posts.how_to_ask.use_tags.example2") %>
    </p>
  </div>
  
  <div class="section">
    <%= t("posts.how_to_ask.terms") %>
    <%= link_to raw("<i class='icon icon-share'> </i>"), '#', target: '_blank' %>
  </div>
  
  <div class="continue section">
    <p> <%= t("posts.how_to_ask.no_wait") %> </p>
    <br>
    <%= link_to ask_path, class: 'proceed' do %>      
      <%= t("posts.how_to_ask.proceed") %>
      <i class='icon icon-bullhorn'></i>
    <% end %>
  </div>  
  
</div>