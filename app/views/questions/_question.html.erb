<div class="question row">
		
	<div class="span1">
    <%= avatar_for(question.user, { size: :thumb }) %>
	</div>
	
	<div class="span10">
		<div class="name"> 
      <b class="user"> <%= link_to question.user.name, '#' %> </b> 
      <%= t("questions.list.asked_about") %> 
      <small> <%= question.tags.map(&:description).join(', ') %> </small> 
    </div>
		<%= link_to question.title, question, class: "text" %>
		<div class="date"> 
      <%= "#{time_ago_in_words(question.created_at)}" %> 
    </div>
	</div>
	
	<div class="span1 stats"> 
		<div class="votes"> 
			0
			<small> <%= t(:votes) %> </small>
		</div>
		
	</div>
	
</div>