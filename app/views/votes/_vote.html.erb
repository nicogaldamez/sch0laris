<div class="votes pull-right"> 
  <%= link_to image_tag("icons/rating_bad.png"), polymorphic_url([:down, voteable, Vote.new], format: :json), 
          remote: true, class: 'vote_down'%>
	<span class="number"> <%= voteable.votes %> </span>
  <%= link_to image_tag("icons/rating_good.png"), polymorphic_url([:up, voteable, Vote.new], format: :json), 
          remote: true, class: 'vote_up'%>
  <small class="count"> <%= t(:votes) %> </small>
</div>