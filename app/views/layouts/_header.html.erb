<header class="navbar navbar-fixed-top ">
	<%= render 'sessions/sign_in' %>
	
	<div class="container">
		
		<div class="row">
			<%= link_to "scholaris", root_path, id: "logo" %>
		
			<nav class="row">
				<% if !signed_in? %>
		      <ul class="nav pull-right">
		        <li id="search_container" class="search"> 
							<%= link_to "<i class='icon icon-search'> </i>".html_safe, "#", class: "search", id: "search_icon" %> 
							<%= text_field_tag :search, "", placeholder: t(:search) %>
						</li>
						<li> <%= link_to_function t(:sign_in), "toggle_sign_in()" %> </li>
						<li> <%= link_to t(:sign_up), new_user_path, id: "prueba" %> </li>
		      </ul>
				<% end %>
	    </nav>
		</div>
  </div>
</header>